{
    "name": "jniteapot-cpp",
    "displayName": "JniTeapot C++",
    "description": "C++ with support for JniTeapot specific syntax",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.59.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "grammars": [{
            "injectTo": ["source.cpp"],
            "scopeName": "source.cpp.jniteapot-cpp",
            "path": "./syntaxes/jniteapot-cpp.json",
            "embeddedLanguages": {
                "jniteapot-cpp.shader.content": "glsl",
                "jniteapot-cpp.shader.macro":   "cpp"
            },
            "tokenTypes": {
              "jniteapot-cpp.shader": "other"              
            }
        },
        
        {
            "injectTo": ["source.cpp"],
            "scopeName": "source.cpp.jniteapot-cpp.comment",
            "path": "./syntaxes/jniteapot-cpp.comment.json"
        }
        
        ]
    }
}