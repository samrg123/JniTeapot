{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",

	"name": "JniTeapot C++",
	"scopeName": "source.cpp.jniteapot-cpp.comment",
	"injectionSelector": "L:comment",

	"patterns": [
		{ "include": "#todo"	},
		{ "include": "#warn"	},
		{ "include": "#error"	},
		{ "include": "#note"	},
		{ "include": "#bug"		},
		{ "include": "#fixme"	}
	],

	"repository": {
		"todo": {
			"patterns": [{
				"match": "\\b((?:TODO|Todo)\\s*(?:\\(([^)]*)\\))?:?)\\s(.*)",
				"captures": {
					"0": { "name": "jniteapot-cpp.comment.todo" },
					"1": { "name": "jniteapot-cpp.comment.todo.keyword" },
					"2": { "name": "jniteapot-cpp.comment.todo.name" },
					"3": { "name": "jniteapot-cpp.comment.todo.message" }
				}
			}]			
		},
		"warn": {
			"patterns": [{
				"match": "\\b((?:WARN|Warn|WARNING|Warning)\\s*(?:\\(([^)]*)\\))?:?)\\s(.*)",
				"captures": {
					"0": { "name": "jniteapot-cpp.comment.warn" 		},
					"1": { "name": "jniteapot-cpp.comment.warn.keyword" },
					"2": { "name": "jniteapot-cpp.comment.warn.name" 	},
					"3": { "name": "jniteapot-cpp.comment.warn.message" }
				}
			}]			
		},
		"error": {
			"patterns": [{
				"match": "\\b((?:ERR|Err|ERROR|Error)\\s*(?:\\(([^)]*)\\))?:?)\\s(.*)",
				"captures": {
					"0": { "name": "jniteapot-cpp.comment.error" 		 },
					"1": { "name": "jniteapot-cpp.comment.error.keyword" },
					"2": { "name": "jniteapot-cpp.comment.error.name" 	 },
					"3": { "name": "jniteapot-cpp.comment.error.message" }
				}
			}]			
		},
		"note": {
			"patterns": [{
				"match": "\\b((?:NOTE|Note)\\s*(?:\\(([^)]*)\\))?:?)\\s(.*)",
				"captures": { 
					"0": { "name": "jniteapot-cpp.comment.note" 		},
					"1": { "name": "jniteapot-cpp.comment.note.keyword" },
					"2": { "name": "jniteapot-cpp.comment.note.name" 	},
					"3": { "name": "jniteapot-cpp.comment.note.message" }
				}
			}]			
		},
		"bug": {
			"patterns": [{
				"match": "\\b((?:BUG|Bug)\\s*(?:\\(([^)]*)\\))?:?)\\s(.*)",
				"captures": {
					"0": { "name": "jniteapot-cpp.comment.bug" 			},
					"1": { "name": "jniteapot-cpp.comment.bug.keyword"  },
					"2": { "name": "jniteapot-cpp.comment.bug.name" 	},
					"3": { "name": "jniteapot-cpp.comment.bug.message" 	}
				}
			}]			
		},
		"fixme": {
			"patterns": [{
				"match": "\\b((?:FIXME|Fixme)\\s*(?:\\(([^)]*)\\))?:?)\\s(.*)",
				"captures": {
					"0": { "name": "jniteapot-cpp.comment.fixme" 		 },
					"1": { "name": "jniteapot-cpp.comment.fixme.keyword" },
					"2": { "name": "jniteapot-cpp.comment.fixme.name" 	 },
					"3": { "name": "jniteapot-cpp.comment.fixme.message" }
				}
			}]			
		}
    }
}
