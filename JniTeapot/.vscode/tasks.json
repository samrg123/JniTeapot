{
	"version": "2.0.0",
	
	"presentation": {
		"clear": true,
		"panel": "shared",
		"showReuseMessage": true
	},

	"tasks": [

		// TODO: Have persistant open terminal task that is in same group as JniTeapot - Build

		{
			"label": "Build Debug APK",

			"presentation": {
				"group": "JniTeapot - Build",
				"panel": "shared",
				"reveal": "always",
				"clear": true,
				"echo": true,
				"focus": true,
				"showReuseMessage": true,
				"close": false,
			},

			"type": "shell",
			"command": "./gradlew.bat app:assembleDebug",

			"problemMatcher": {
				"owner": "cpp",
				"base": "$gcc",
				"fileLocation":"absolute",
				"source": "Build Debug APK"
			},

			"group": {
				"kind": "build",
				"isDefault": true
			}
		},

		{
			"label": "Build Release APK",

			"presentation": {
				"group": "JniTeapot - Build",
				"panel": "shared",
				"reveal": "always",
				"clear": true,
				"echo": true,
				"focus": true,
				"showReuseMessage": true,
				"close": false,
			},

			"type": "shell",
			"command": "./gradlew.bat app:assembleRelease",

			"problemMatcher": {
				"owner": "cpp",
				"base": "$gcc",
				"fileLocation":"absolute",
				"source": "Build Release APK"
			},

			"group": "build",
		},
		
		{
			"label": "Clean Build",

			"presentation": {
				"group": "JniTeapot - Build",
				"panel": "shared",
				"reveal": "always",
				"clear": true,
				"echo": true,
				"focus": true,
				"showReuseMessage": true,
				"close": false,
			},

			"type": "shell",
			"command": "./gradlew.bat app:clean",
			"problemMatcher": [],

			"group": "build",
		},		

		{
			"label": "Prepare Launch",
			"dependsOn": ["Build Debug APK"],

			"presentation": {
				"group": "JniTeapot - Launch",
				"panel": "shared",
				"reveal": "always",
				"clear": false,
				"echo": true,
				"focus": false,
				"showReuseMessage": true,
				"close": true,
			},
			
			"type": "shell",
			"command": "adb start-server",
		},

	]
}
